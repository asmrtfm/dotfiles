### Handles everything:
for path in /{,s{,nap/},usr/{,s,local/{,s,go/}},${HOME:1}/{,{.local,.pub-cache,go}/}}bin /usr/{share/fslint/fslint,include/d,lib/ldc,games} ; do [[ ! -d "$path" ]] || PATH="$PATH:$path" ; done

### [ GOLANG ]
## deprecated version(in my case v1.13)-centric. 
#[[ ! -e /usr/lib/go ]] || export GOROOT="$(realpath /usr/lib/go)"
#
## go version >=~ 1.16 :
PATH+=":/usr/local/go/bin"
#
## Seemingly, version agnostic
[[ ! -d ~/go ]] || export GOPATH=~/go
[[ ! -d $GOPATH/bin ]] || export GOBIN=$GOPATH/bin
PATH+=$GOBIN
